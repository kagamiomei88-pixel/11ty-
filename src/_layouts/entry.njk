---
layout: base.njk
---

<article class="entry">
  <h2>{{ title }}</h2>
  
  {% if sound %}
  <section class="sound-system">
    <h3>澄響（音声）</h3>
    <dl>
      {% if sound.reading %}
      <dt>読み:</dt>
      <dd>{{ sound.reading }}</dd>
      {% endif %}
      
      {% if sound.pronunciation %}
      <dt>発音:</dt>
      <dd>{{ sound.pronunciation }}</dd>
      {% endif %}
      
      {% if sound.tone %}
      <dt>声調:</dt>
      <dd>{{ sound.tone }}</dd>
      {% endif %}
    </dl>
  </section>
  {% endif %}
  
  {% if meaning %}
  <section class="meaning">
    <h3>核義（意味）</h3>
    <div class="meaning-content">
      {{ meaning | safe }}
    </div>
  </section>
  {% endif %}
  
  <section class="content">
    {{ content | safe }}
  </section>
  
  {% if tags %}
  <section class="tags">
    <h3>タグ:</h3>
    <ul>
    {% for tag in tags %}
      <li>{{ tag }}</li>
    {% endfor %}
    </ul>
  </section>
  {% endif %}
</article>
